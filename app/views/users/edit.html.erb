<div id="edit_user_form" class="form-horizontal">

<h2>Edit User</h2>

<%= form_for @user, controller: 'users', action: 'update', html: { multipart: true } do |f| %>


  <div class="control-group">
    <%= f.label "Add user avatar", class: "control-label" %>
    <div class="controls">
      <%= f.file_field :avatar %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :first_name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :last_name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :last_name %>
    </div>
  </div>

  <br>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>

</div>