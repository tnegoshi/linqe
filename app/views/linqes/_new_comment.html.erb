<% if current_user %>
<%= form_for Comment.new, html: { class: "form-horizontal" } do |f| %>

 <div class="control-group">
    <%= f.label "Add Comment:", class: "control-label" %>
    <div class="controls">
      <%= f.text_area :content %>
    </div>
  </div>


  <%= f.hidden_field :commenter_id, :value => current_user.id %>
  <%= f.hidden_field :linqe_id, :value => @linqe.id %>

   <div class="control-group">
    <div class="controls">
      <%= f.submit class: "btn btn-primary btn-sm" %>
    </div>
  </div>
<% end %>
<% end %>