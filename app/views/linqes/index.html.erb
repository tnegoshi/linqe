<% if current_user.nil? %>
  <div align="right"> Sign in or Register to submit linqes and comment on linqes </div>
<% end %>


<!-- <div class="jumbotron">
</div> -->
<h1 align="center">Linqes</h1>
<h4 align="center"> Better than r/philosophy </h4>
<br>
<br>

<table class="table table-hover" id="home_page_table">
  <tr>
    <th> # </th>
    <th> linqe </th>
    <th> comments</th>
    <th> submitted by </th>

    <th></th>
    <th></th>
  </tr>
  <tr>
  <% @linqes.each.with_index(1) do |linqe, i| %>

     <% if linqe.submitter %>

          <td><%= "#{i}." %> </td>

          <td><%= link_to "#{linqe.title}", linqe.url, target: "_blank" %></td>

          <td><%= link_to "show", linqe_path(linqe) %></td>

          <td><%= link_to "#{linqe.submitter.username}", user_path(linqe.submitter) %> </td>
          <td>
          <% if current_user != nil && current_user.id == linqe.submitter.id%>
           <%= button_to "Edit Linqe", edit_linqe_path(linqe), method: :get, class:"btn btn-secondary btn-sm"%>
           <% end %>
           </td>

          <td>
           <% if current_user != nil && current_user.id == linqe.submitter.id%>
            <%= button_to "Delete Linqe", linqe_path(linqe), method: :delete, data: {confirm: 'Are you sure?'}, class:"btn btn-secondary btn-sm"%>
           <% end %>
          </td>
        <% end %>
  </tr>
  <% end %>

</table>


















